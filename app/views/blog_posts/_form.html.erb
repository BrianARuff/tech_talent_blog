<%= form_with(model: @blog_post, local: true) do |form| %>
<% if @blog_post.errors.any? %>
<div class="error_explanation">
	<h2><%= pluralize(@blog_post.errors.count, "Error")%> Prohbiited this blog post from being made:</h2>
	<ul>
		<%= @blog_post.errors.full_messages.each do |message| %>
		<li><% message %></li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="form-group">
	<div class="form-group">
		<%= form.text_field :title, class: "form-control", placeholder: "Title" %>
	</div>
	
	<div class="form-group">
		<%= form.text_field :author, class: "form-control", placeholder: "Name" %>
	</div>
	
	<div class="form-group">
		<%= form.text_area :blog_entry, class: "form-control", placeholder: "Type in post", rows: 12 %>
	</div>
	
	<div class="form-group">
		<%= form.submit "Post", class: "btn btn-primary" %>
	</div>
</div>
<% end %>