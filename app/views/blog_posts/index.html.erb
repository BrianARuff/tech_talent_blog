<h1>All Posts</h1>
<div class="row">
	<% @blog_posts.each do |blog_post| %>
<div style="padding: 5px; width: 20rem;" class="" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= link_to blog_post.title, blog_post_path(blog_post) %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p style="word-wrap: break-word;">By: <%= blog_post.author%></p>
        <p style="word-wrap: break-word;"><%= blog_post.blog_entry.truncate(10)%> <%=link_to 'Read More', blog_post %></p>
        <small><i>Created <%= blog_post.created_at.strftime('%m/%d/%Y at %I:%M%p')%> ago</i></small>
      </div>
      <div class="modal-footer" style="justify-content: center;">
      	<%= link_to 'Edit Post', edit_blog_post_path(blog_post), class: "btn btn-warning" %>
      	<%= link_to 'Delete Post', blog_post_path(blog_post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"}, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
  <% end %>
</div>
<%= link_to 'New Post', new_blog_post_path, class: "btn btn-success"%>