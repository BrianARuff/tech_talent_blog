<div class="" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= @blog_post.title %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" style="word-wrap: break-word;">
        <p><%= @blog_post.author%></p>
        <p><%= @blog_post.blog_entry%></p>
        <small>Created <%= time_ago_in_words(@blog_post.created_at)%> ago</small>
      </div>
      <div class="modal-footer">
        <%= link_to 'Edit', edit_blog_post_url(@blog_post), class: "btn btn-warning"%>
        <%= link_to 'View All Posts', root_url, class: "btn btn-primary"%>
      </div>
    </div>
  </div>
</div>

<div class="" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Make a comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" style="word-wrap: break-word;">
        <%= render 'comments/form' %>
      </div>
    </div>
  </div>
</div>

<div class="" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">All Comments</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" style="word-wrap: break-word;">
        <p><%= render 'comments/comments' %></p>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Back', root_url, class: "btn btn-primary" %>