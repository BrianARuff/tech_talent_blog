<div class="" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= @blog_post.title %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" style="word-wrap: break-word;">
        <p><%= @blog_post.author%></p>
        <p><%= @blog_post.blog_entry%></p>
      </div>
      <div class="modal-footer">
        <%= link_to 'Edit', edit_blog_post_url(@blog_post), class: "btn btn-warning"%>
        <%= link_to 'View All Posts', root_url, class: "btn btn-primary"%>
      </div>
    </div>
  </div>
</div>
<%= render 'comments/comment'%>
<%= render 'comments/form' %>

<%= link_to 'Back', root_url, class: "btn btn-primary" %>